{
  "name": "chatvant",
  "version": "1.0.0",
  "description": "ChatVant - Mobile Chat UI Component Library based on Vue 3 and Vant 4",
  "type": "module",
  "main": "./dist/chatvant.umd.js",
  "module": "./dist/chatvant.es.js",
  "exports": {
    ".": {
      "import": "./dist/chatvant.es.js",
      "require": "./dist/chatvant.umd.js"
    },
    "./dist/chatvant.css": "./dist/chatvant.css",
    "./style.css": "./dist/chatvant.css",
    "./css": "./dist/chatvant.css"
  },
  "style": "./dist/chatvant.css",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "prepublishOnly": "npm run build",
    "check": "node scripts/pre-publish-check.js",
    "pack:test": "npm pack --dry-run"
  },
  "keywords": [
    "vue3",
    "vant",
    "chat",
    "ui",
    "mobile",
    "component",
    "chatvant",
    "chat-ui",
    "vue-chat"
  ],
  "author": "ChatVant Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/chatvant.git",
    "directory": "packages"
  },
  "peerDependencies": {
    "vue": "^3.4.0",
    "vant": "^4.8.0"
  },
  "peerDependenciesMeta": {
    "@tiptap/vue-3": {
      "optional": true
    },
    "@tiptap/starter-kit": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "@tiptap/extension-color": "^3.13.0",
    "@tiptap/extension-image": "^3.13.0",
    "@tiptap/extension-link": "^3.13.0",
    "@tiptap/extension-placeholder": "^3.13.0",
    "@tiptap/extension-table": "^3.13.0",
    "@tiptap/extension-table-cell": "^3.13.0",
    "@tiptap/extension-table-header": "^3.13.0",
    "@tiptap/extension-table-row": "^3.13.0",
    "@tiptap/extension-text-align": "^3.13.0",
    "@tiptap/extension-text-style": "^3.13.0",
    "@tiptap/extension-typography": "^3.13.0",
    "@tiptap/extension-underline": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0",
    "@tiptap/vue-3": "^3.13.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "sass": "^1.70.0",
    "vite": "^5.0.0",
    "vue": "^3.4.0"
  }
}
